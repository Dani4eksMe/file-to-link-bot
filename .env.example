# Telegram API credentials (required)
# Get from https://my.telegram.org
API_ID=12345678
API_HASH=abcdef1234567890abcdef1234567890

# Bot token from @BotFather (required)
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Channel ID for storing files (required)
# Create a channel, make bot admin, get ID using @userinfobot
BIN_CHANNEL=-1001234567890

# Channel ID for logs (optional)
LOG_CHANNEL=-1001234567891

# Web server configuration
PORT=8080
WEB_SERVER_BIND_ADDRESS=0.0.0.0
FQDN=yourdomain.com
HAS_SSL=False
NO_PORT=False

# Bot configuration
WORKERS=8
SLEEP_THRESHOLD=60
PING_INTERVAL=1200

# Admin configuration
# Space-separated list of admin user IDs
ADMINS=123456789 987654321
OWNER_ID=123456789

# Feature flags
ENABLE_STATS=True
ENABLE_BROADCAST=True
ENABLE_FORCE_SUB=False
FORCE_SUB_CHANNEL=@yourchannel

# File limits
MAX_FILE_SIZE=2147483648  # 2GB in bytes
MIN_FILE_SIZE=0
ALLOWED_EXTENSIONS=  # Leave empty to allow all

# Database
DATABASE_URL=sqlite:///data/bot.db

# Logging
LOG_LEVEL=INFO

# Multi-client mode (advanced)
MULTI_CLIENT=False
MULTI_TOKEN=

# Heroku specific (auto-detected)
# APP_NAME=your-app-name